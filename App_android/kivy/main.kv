#:kivy 2.1.0

<Tab>:
    orientation: 'vertical'
    padding: dp(10)
    MDLabel:
        text: root.text
        halign: "left"
        theme_text_color: "Primary"
        size_hint_y: None
        height: dp(40)

<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        
        MDBoxLayout:
            id: content
            size_hint: 1, 0.88
            MDLabel:
                text: "Contenido principal"
                halign: "center"
        
        MDTabs:
            id: tabs
            size_hint: 1, 0.12
            tab_indicator_anim: False
            
            Tab:
                text: "Vencimientos"
                icon: "home"
                MDLabel:
                    text: "Muestra los vencimientos de pagos."
            
            Tab:
                text: "Clientes"
                icon: "account"
                MDLabel:
                    text: "Lista de clientes registrados."
            
            Tab:
                text: "Agregar clientes"
                icon: "account-plus"
                MDLabel:
                    text: "Formulario para a√±adir clientes nuevos."
            
            Tab:
                text: "Aplicar pagos"
                icon: "cash"
                MDLabel:
                    text: "Registrar pagos de clientes."
            
            Tab:
                text: "Envio estado"
                icon: "gmail"
                MDLabel:
                    text: "Enviar estados por mail."